
@Html.ActionLink("Dash Board", "Deshboard")

@if (ViewBag.ProductIdsInCart != null)
{
    <h2>Your Shopping Cart</h2>

    <form method="post" action="@Url.Action("ConfirmOrder", "User")">

        @foreach (var item in ViewBag.ProductIdsInCart)
        {
            <input type="hidden" name="id" value="@item.id" />
            <input type="hidden" name="name" value="@item.name" />
            <input type="hidden" name="Quantity" value="@item.Quantity" />
            <input type="hidden" name="Price" value="@item.Price" />
            <input type="hidden" name="Status" value="@item.Status" />
            <input type="hidden" name="CustomerId" value="@item.CustomerId" />
            <input type="hidden" name="Date" value="@item.Date.ToString("yyyy-MM-dd")" />
        }




        <input type="submit" value="Order Confirm" />
    </form>

    <table class="table">
        <thead>
            <tr>

                <th>Product ID</th>
                <th>Product Name</th>
                <th>Quantity</th>
                <th>Price</th>
                <th>Status</th>
                <th>Customer ID</th>
                <th>Order Date</th>
            </tr>
        </thead>
        <tbody>
            @{
                double totalPrice = 0;
            }
            @foreach (var item in ViewBag.ProductIdsInCart)
            {
                <tr>

                    <td>@item.id</td>
                    <td>@item.name</td>
                    <td>@item.Quantity</td>
                    <td>@(item.Quantity * item.Price)</td>
                    <td>@item.Status</td>
                    <td>@item.CustomerId</td>
                    <td>@item.Date.ToString("yyyy-MM-dd")</td>

                </tr>
                {
                    totalPrice += item.Quantity * item.Price;
                }
            }
            <tr>
                <td>Total Price:</td>
                <td>@totalPrice</td>
            </tr>
        </tbody>

        

        
    </table>





}
else
{
    <p>Your cart is empty.</p>
}


